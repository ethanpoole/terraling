- page_heading "Registration"
%h2 Register
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal", :id => "login-form"}) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email, :class => "control-label"
    .controls
      = f.text_field :email
  .form-group
    = f.label :name, :class => "control-label"
    .controls
      = f.text_field :name
  .form-group
    = f.label "Website (departmental or personal)", :class => "control-label"
    .controls
      = f.text_field :website
  .form-group
    = f.label :password, :class => "control-label"
    .controls
      = f.password_field :password
  .form-group
    = f.label :password_confirmation, :class => "control-label"
    .controls
      = f.password_field :password_confirmation
  .form-group
    .controls
      = recaptcha_tags
  .form-group
    .controls
      = f.submit "Register", :class => "btn"
= render :partial => "devise/shared/links"
