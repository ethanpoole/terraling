- page_heading "Edit registration information"
%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email, :class => "control-label"
    .controls.text-adjust
      = resource.email
  .form-group
    = f.label :name, :class => "control-label"
    .controls.text-adjust
      = f.text_field :name
  %h2 Change your password:
  .form-group
    = f.label :current_password, :class => "control-label"
    .controls.text-adjust
      = f.password_field :current_password
      %br/
      %span.italic.blue (we need your current password to confirm your changes)
  .form-group
    = f.label :password, :class => "control-label"
    .controls.text-adjust
      = f.password_field :password
      %br/
      %span.italic.blue (leave blank if you don't want to change it)
  .form-group
    = f.label :password_confirmation, :class => "control-label"
    .controls.text-adjust
      = f.password_field :password_confirmation
  .form-group
    .controls
      = f.submit "Update", :class => "btn"
  %h3 Cancel my account
  .form-group
    = label_tag "cancel-account", "Unhappy?", :class => "control-label"
    .controls
      = link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => 'Are you sure?' }, :method => :delete, :class => "btn btn-danger", :id => "cancel-account"
= link_to "Back", :back
