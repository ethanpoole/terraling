- page_heading "#{@team.name}"

%h1
  = "Team View: "
  = @team.name
  -if @team.primary_author
    %span.small.pull-right
      Set by
      = @team.primary_author
#form-container
  =form_for(@team, url: {action: "update"}, html: {class: "form-horizontal"}) do
    %fieldset
      .tab-content
        / Tabs of snippets go here
        #input.tab-pane.active
          .component
            / Text input
            .form-group
              %label.strong.col-md-4.control-label{for: "name"} Name
              .col-md-4
                %input#name.form-control.input-md{name: "name", placeholder: "#{@team.name}", style: "cursor: auto;", type: "text"}
            / Text input
            .form-group
              %label.strong.col-md-4.control-label{for: "website"} Website
              .col-md-4
                %input#email.form-control.input-md{name: "website", placeholder: "#{@team.website}", style: "cursor: auto;", type: "text"}
          .component
            / Button Drop Down
            .form-group
              %label.strong.col-md-7.control-label{for: "submit"}
              .col-md-1
                %button.col-md-12.btn.btn-default{type: "submit"} Submit