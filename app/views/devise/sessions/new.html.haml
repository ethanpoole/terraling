- page_heading "Login"
.row
  .col-md-6
    %h2 Login
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
      .form-group
        = f.label :email, :class => "control-label col-sm-2"
        .controls.col-sm-10
          = f.text_field :email
      .form-group
        = f.label :password, :class => "control-label col-sm-2"
        .controls.col-sm-10
          = f.password_field :password
      .form-group
        .controls.col-sm-offset-2.col-sm-10
          - if devise_mapping.rememberable?
            = label_tag 'user[remember_me]', :class => "checkbox" do
              = f.check_box :remember_me
              Remember Me
      .form-group
        .controls.col-sm-offset-2.col-sm-10
          = f.submit "Sign in", :class => "btn btn-success", :id => "sign_in"
          - if devise_mapping.recoverable? && controller_name != 'passwords'
            = link_to "Forgot your password?", new_password_path(resource_name) , :class => "btn btn-link btn-sm"
  - if devise_mapping.registerable? && controller_name != 'registrations'
    .col-md-6
      %h2 Not registered yet?
      %p 
        Register for a 
        %span
          = link_to "Terraling account", new_registration_path(resource_name), :class => "btn btn-default btn-sm"
